# Configuración de entorno para Sueño Andino
# Copia este archivo como .env.local y configura las variables

# ===========================================
# CONFIGURACIÓN DE DESARROLLO
# ===========================================

# Entorno de ejecución
NODE_ENV=development

# Puerto del servidor (por defecto 3000)
PORT=3000

# URL base de la aplicación
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ===========================================
# CONFIGURACIÓN DE EMAIL
# ===========================================

# Configuración SMTP para envío de emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu-email@gmail.com
SMTP_PASS=tu-password-de-aplicacion

# Email de contacto (donde se envían los mensajes del formulario)
CONTACT_EMAIL=contacto@sueñoandino.com

# Email de notificaciones
NOTIFICATION_EMAIL=notificaciones@sueñoandino.com

# ===========================================
# CONFIGURACIÓN DE SEGURIDAD
# ===========================================

# Clave secreta para firmar tokens (generar con: openssl rand -base64 32)
NEXTAUTH_SECRET=tu-clave-secreta-aqui

# Clave para encriptación de datos sensibles
ENCRYPTION_KEY=tu-clave-de-encriptacion-aqui

# Configuración de rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_MAX_FORM_SUBMISSIONS=5

# ===========================================
# CONFIGURACIÓN DE PRODUCCIÓN
# ===========================================

# URL de producción
PRODUCTION_URL=https://sueñoandino.com

# Configuración de CDN (opcional)
CDN_URL=https://cdn.sueñoandino.com

# Configuración de base de datos (si se implementa)
DATABASE_URL=postgresql://usuario:password@localhost:5432/sueñoandino

# ===========================================
# CONFIGURACIÓN DE SERVICIOS EXTERNOS
# ===========================================

# SendGrid API Key (alternativa a SMTP)
SENDGRID_API_KEY=tu-sendgrid-api-key

# Google Analytics (opcional)
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Google Tag Manager (opcional)
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# ===========================================
# CONFIGURACIÓN DE MONITOREO
# ===========================================

# Sentry DSN para monitoreo de errores
SENTRY_DSN=tu-sentry-dsn

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# ===========================================
# CONFIGURACIÓN DE CORS
# ===========================================

# Orígenes permitidos para CORS (separados por coma)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://sueñoandino.com

# ===========================================
# CONFIGURACIÓN DE CACHE
# ===========================================

# Tiempo de cache para páginas estáticas (en segundos)
CACHE_TTL=3600

# Configuración de Redis (si se implementa)
REDIS_URL=redis://localhost:6379

# ===========================================
# NOTAS DE SEGURIDAD
# ===========================================

# IMPORTANTE:
# 1. Nunca commitees archivos .env o .env.local al repositorio
# 2. Usa contraseñas fuertes y únicas para cada servicio
# 3. Rota las claves regularmente (cada 90 días)
# 4. Usa un gestor de secretos en producción (Vault, AWS Secrets Manager, etc.)
# 5. Configura alertas para intentos de acceso no autorizados
# 6. Monitorea logs de seguridad regularmente
