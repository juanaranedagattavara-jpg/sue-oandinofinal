{
  "apiVersion": 3,
  "title": "Hero Section",
  "name": "sueño-andino/hero-block",
  "category": "sueño-andino",
  "icon": "format-image",
  "description": "Sección principal con título, descripción y botones de llamada a la acción",
  "keywords": ["hero", "principal", "banner"],
  "version": "1.0.0",
  "textdomain": "sueño-andino",
  "supports": {
    "html": false,
    "align": ["full", "wide"],
    "spacing": {
      "padding": true,
      "margin": true
    }
  },
  "attributes": {
    "title": {
      "type": "string",
      "default": "DESARROLLO TERRITORIAL REGENERATIVO"
    },
    "subtitle": {
      "type": "string",
      "default": "DESDE Y HACIA LATINOAMÉRICA"
    },
    "description": {
      "type": "string",
      "default": "Impulsamos proyectos de desarrollo territorial que devuelven vitalidad a los ecosistemas, fortalecen comunidades y generan prosperidad consciente y regenerativa"
    },
    "primaryButtonText": {
      "type": "string",
      "default": "Conoce Nuestros Servicios"
    },
    "primaryButtonLink": {
      "type": "string",
      "default": "#servicios"
    },
    "secondaryButtonText": {
      "type": "string",
      "default": "Descarga Guía Gratuita"
    },
    "backgroundImage": {
      "type": "string",
      "default": ""
    },
    "stats": {
      "type": "array",
      "default": [
        { "number": "1,200+", "label": "Personas Beneficiadas" },
        { "number": "25+", "label": "Comunidades Atendidas" },
        { "number": "15+", "label": "Proyectos Exitosos" },
        { "number": "98%", "label": "Satisfacción" }
      ]
    }
  },
  "providesContext": {
    "sueño-andino/heroTitle": "title"
  }
}